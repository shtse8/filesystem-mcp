{
  "name": "@sylphlab/filesystem-mcp",
  "version": "0.5.9",
  "description": "An MCP server providing filesystem tools relative to a project root.",
  "type": "module",
  "main": "./build/index.js",
  "module": "./build/index.js",
  "types": "./build/index.d.ts",
  "bin": {
    "filesystem-mcp": "./build/index.js"
  },
  "exports": {
    ".": {
      "types": "./build/index.d.ts",
      "import": "./build/index.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "tsc --watch",
    "build": "npm run clean && tsc && node scripts/postbuild.js",
    "start": "node build/index.js",
    "lint": "eslint . --ext .ts,.js --cache",
    "lint:fix": "eslint . --ext .ts,.js --fix --cache",
    "format": "prettier --write . --cache",
    "check-format": "prettier --check . --cache",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage",
    "validate": "npm run check-format && npm run lint && npm run typecheck && npm run test:cov",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "clean": "rm -rf build coverage",
    "prepare": "husky install",
    "release": "standard-version",
    "docs:dev": "vitepress dev docs",
    "docs:build": "npm run docs:api && vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "docs:api": "node scripts/generate-api-docs.mjs",
    "benchmark": "vitest bench",
    "prepublishOnly": "npm run build"
  },
  "homepage": "https://github.com/sylphlab/filesystem-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphlab/filesystem-mcp.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "filesystem",
    "file",
    "directory",
    "typescript",
    "node",
    "cli",
    "ai",
    "agent",
    "tool"
  ],
  "author": "Sylph Lab <contact@sylphlab.ai> (https://sylphlab.ai)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/sylphlab/filesystem-mcp/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.6.0",
    "detect-indent": "^7.0.1",
    "diff": "^7.0.0",
    "glob": "^11.0.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/js": "^9.7.0",
    "@types/diff": "^7.0.2",
    "@types/glob": "^8.1.0",
    "@types/node": "^20.14.10",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.1.1",
    "eslint": "^9.7.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "prettier": "^3.3.2",
    "standard-version": "^9.5.0",
    "typedoc": "^0.28.0",
    "typedoc-plugin-markdown": "^4.2.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.0.0",
    "uuid": "^10.0.0",
    "vitepress": "^1.3.0",
    "vitest": "^3.1.1"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --cache",
      "prettier --write --cache"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write --cache"
    ]
  }
}
