{
  "name": "@sylphlab/filesystem-mcp",
  "version": "0.5.9",
  "description": "An MCP server providing filesystem tools relative to a project root.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sylphlab/filesystem-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/sylphlab/filesystem-mcp/issues"
  },
  "homepage": "https://github.com/sylphlab/filesystem-mcp#readme",
  "type": "module",
  "bin": {
    "filesystem-mcp": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js",
    "test": "vitest run --coverage"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "0.6.0",
    "@types/diff": "^7.0.2",
    "detect-indent": "^7.0.1",
    "diff": "^7.0.0",
    "glob": "^11.0.1",
    "zod": "^3.24.2",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/node": "^20.11.24",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^3.1.1",
    "typescript": "^5.3.3",
    "uuid": "^11.1.0",
    "vitest": "^3.1.1"
  }
}
